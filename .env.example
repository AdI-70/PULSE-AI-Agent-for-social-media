# Database Configuration
DATABASE_URL=postgresql://pulse_user:pulse_password@localhost:5432/pulse_db
POSTGRES_USER=pulse_user
POSTGRES_PASSWORD=pulse_password
POSTGRES_DB=pulse_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# News API Configuration
NEWSAPI_KEY=your_newsapi_key_here
NEWSAPI_BASE_URL=https://newsapi.org/v2

# LLM Provider Configuration (choose one or multiple)
# OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Hugging Face
HF_API_KEY=your_huggingface_key_here
HF_MODEL=microsoft/DialoGPT-medium

# X (Twitter) API Configuration
X_BEARER_TOKEN=your_x_bearer_token_here
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
JWT_SECRET_KEY=your_jwt_secret_key_here

# Mock Mode (set to true for testing without API keys)
MOCK_MODE=false
MOCK_NEWS_ARTICLES=true
MOCK_LLM_RESPONSES=true
MOCK_X_POSTS=true

# Rate Limiting
NEWS_FETCH_RATE_LIMIT=100  # requests per hour
X_POST_RATE_LIMIT=50      # posts per hour
LLM_REQUEST_RATE_LIMIT=1000  # requests per hour

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Scraping Configuration
PLAYWRIGHT_TIMEOUT=30000
USER_AGENT=Pulse/1.0 (+https://pulse-news.example.com)

# Optional MongoDB for raw content storage
MONGODB_URL=mongodb://localhost:27017/pulse_raw_content
ENABLE_MONGODB=false